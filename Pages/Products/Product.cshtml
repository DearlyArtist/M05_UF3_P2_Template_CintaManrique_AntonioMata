@page
@model M05_UF3_P2_Template.Pages.Products.ProductModel
@{
    if (Model.Id > 0)
    {
        ViewData["Title"] = "Product - " + Model.product.Developer;
    }
    else
    {
        ViewData["Title"] = "Product - Create";
    }
}

<form method="post">
    <button type="submit">Save</button>

    <div class = "card">
        <div class = "card-header">
                <h1 class = "card-title">
                @if (Model.Id > 0)
                {
                    <img class="img img-thumbnail img-fluid" src="@Model.product.Icon" style="width: 200px; height: 100px; object-fit: scale-down; background-color:@Model.product.Banner;" />
                    <span>@Model.product.Developer - <small>Edit product</small></span>
                }
                else
                {
                    <span>Create product</span>
                }
                <button type="submit" class="btn btn-primary float-right"><span class="material-icons">save</span></button>
                </h1>
        </div>
        <div class = "card-body">
            <div class="form-row">
                <div class="form-group col-md-2">
                         <label for="Product_Summary_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Summary</label>
                        <input type="text" asp-for="product.Summary">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Icon_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Icon</label>
                        <input type="image" asp-for="product.Icon">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Banner_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Banner</label>
                        <input type="image" asp-for="product.Banner">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Trailer_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Trailer</label>
                        <input type="file" asp-for="product.Trailer">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Price_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Price</label>
                        <input type="number" asp-for="product.Price">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Publishing_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Publishing</label>
                        <input type="date" asp-for="product.Publishing">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Size_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Size</label>
                        <input type="number" asp-for="product.Size">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_DeveloperId_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Developer_Id</label>
                         <input type="number" min="0" step="1" asp-for="product.Developer_id">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_EditorId_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Editor_Id</label>
                         <input type="number" min="0" step="1" asp-for="product.Editor_id">
                </div>
                <div class="form-group col-md-2">
                         <label for="Product_Type_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">business</span>Type</label>
                         @if(Model.product.Type == App_Code.Model.Product.TYPE.Game)
                         {
                         <a class="btn btn-primary float-right" asp-page="/Products/Game" asp-route-id="@Model.helper_id" title="View Game">
                         <span class="material-icons text-white">add</span>
                         </a>
                         }
                         else
                         {
                         <a class="btn btn-primary float-right" asp-page="/Products/Video" asp-route-id="@Model.helper_id" title="View Video">
                         <span class="material-icons text-white">add</span>
                         </a>
                         }
                </div>
            </div>
        </div>
    </div>

</form>

