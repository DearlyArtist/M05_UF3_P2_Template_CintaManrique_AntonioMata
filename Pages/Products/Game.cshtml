@page
@model M05_UF3_P2_Template.Pages.Products.GameModel
@{
        if (Model.Id > 0)
    {
        ViewData["Title"] = "Game - " + Model.product.Id;
    }
    else
    {
        ViewData["Title"] = "Game - Create";
    }
}

<form method="post">
    <button type="submit">Save</button>

    <div class="card">
        <div class = "card-header">
            <h1 class = "card-title">
                @if (Model.Id > 0)
                {
                    <img class="img img-thumbnail img-fluid" src="@Model.product.Product_Id" style="width: 200px; height: 100px; object-fit: scale-down; background-color:@Model.product.Id;" />
                    <span>@Model.product.Id - <small>Edit Game</small></span>
                }
                else
                {
                    <span>Create Game</span>
                }
                <button type="submit" class="btn btn-primary float-right"><span class="material-icons">save</span></button>
            </h1>

        </div>
        <div class = "card-body">
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="Video_Id_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">tag</span>Id</label>
                    @{
                        string CustomId = Model.Id > 0 ? Model.Id.ToString() : null;
                    }
                     <input type="text" asp-for="product.Id" value="@CustomId" readonly class="form-control" id="Product_Id_Input" placeholder="-">
                </div>
                <div class="form-group col-md-2">
                    <label for="Game_Rating_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Rating</label>
                <input type="number" asp-for="product.Rating">
                </div>
                <div class="form-group col-md-2">
                    <label for="Game_Version_Input col-sm-2 col-form-label"><span class="material-icons mx-1" style="font-size: 1rem;">badge</span>Version</label>
                <input type="number" asp-for="product.Version">
                </div>
            </div>

        </div>
    </div>
</form>
